ALTER TABLE Foro ADD CONSTRAINT PK_Foro PRIMARY KEY (numero);
ALTER TABLE Comentario ADD CONSTRAINT PK_Comentario PRIMARY KEY (numeroForo,numeroComentario);
ALTER TABLE Noticia ADD CONSTRAINT PK_Noticia PRIMARY KEY (numeroNoticia);
ALTER TABLE Guia ADD CONSTRAINT PK_Guia PRIMARY KEY (numeroGuia);
ALTER TABLE Fuente ADD CONSTRAINT PK_FUENTE PRIMARY KEY (numeroNoticia,numeroFuente);

ALTER TABLE Fuente ADD CONSTRAINT FK_FUENTE FOREIGN KEY (numeroNoticia) REFERENCES Noticia (numeroNoticia)ON DELETE CASCADE;
ALTER TABLE Guia ADD CONSTRAINT FK_Guia FOREIGN KEY (numeroGuia) REFERENCES Foro (numero)ON DELETE CASCADE;
ALTER TABLE Noticia ADD CONSTRAINT FK_Noticia FOREIGN KEY (numeroNoticia) REFERENCES Foro (numero)ON DELETE CASCADE;
ALTER TABLE Fuente ADD CONSTRAINT FK_Fuente2 FOREIGN KEY (numeroFuente) REFERENCES Foro (numero) ON DELETE CASCADE; 

ALTER TABLE Noticia ADD CONSTRAINT CK_NOTICIA CHECK (tema = 'Lanzamiento' OR tema = 'Actualizacion');
ALTER TABLE Guia ADD CONSTRAINT CK_Guia CHECK (tipo = 'Logro' OR tipo = 'Campaña');